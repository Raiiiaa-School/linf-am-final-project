{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "": [""]
        }
    },
    "include": ["src/**/*"]
}
